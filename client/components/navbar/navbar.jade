div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') horarios

    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in simpleEntries', ng-class='{active: isActive(item.link)}')
          a(ng-href='{{item.link}}') {{item.title}}

        li.dropdown(ng-repeat='item in compoundEntries', ng-class='{active: isActive(item.link)}')
          a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
            | {{item.title}}
            span.caret
          ul.dropdown-menu(role='menu')
            li(ng-repeat="child in item.childs")
              a(href='{{item.link + child.link}}') {{child.title}}
